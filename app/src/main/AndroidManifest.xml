<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.wildcodeschool.robinsdesmers">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".updateUser.CategoryUserDetailsActivity"></activity>
        <activity android:name=".updateUser.AvatarUserDetailsActivity" />
        <activity android:name=".updateUser.LessPersoDetailsActivity" />
        <activity android:name=".updateUser.UserPersoDetailsActivity" />
        <activity android:name=".updateUser.PersonalDetailsActivity" />
        <activity android:name=".information.DeepLinkActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".information.AboutUsActivity" />
        <activity android:name=".information.SecurityInfoActivity" />
        <activity android:name=".information.InformationActivity" />
        <activity android:name=".inscription.UserDescriptionActivity" />
        <activity android:name=".information.RecyclingInfoActivity" />
        <activity android:name=".inscription.UserDetailsActivity" />
        <activity android:name=".inscription.UserCategoryActivity" />
        <activity android:name=".FirstPageActivity" />
        <activity android:name=".ScreenSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignInActivity" />
        <activity android:name=".rubbish_collect_point.RubbishMultiInfosActivity" />
        <activity android:name=".rubbish_collect_point.CollectPointInfosActivity" />
        <activity android:name=".rubbish_collect_point.RubbishInfosActivity" />
        <activity android:name=".rubbish_collect_point.MarkerTypeActivity" />
        <activity android:name=".MapsActivity" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".inscription.InscriptionActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".inscription.AvatarChoicesActivity" />
    </application>

</manifest>